<Window x:Class="main_window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:main_window"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <GroupBox  BorderThickness="3" BorderBrush="Brown"  Margin="20" FontSize="14.667">
            <GroupBox.Header>
                <WrapPanel Margin="0">
                    <Image Source="ITI_logo.png" Width="20" Margin="5,0,0,0"></Image>
                    <TextBlock FontWeight="Bold" Margin="5,7,5,0" FontSize="14.667" >Exam System</TextBlock>
                    
                </WrapPanel>
            </GroupBox.Header>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center"  Margin="20">
               
                    <Button  Margin="10" Height="40" FontSize="20">Manager</Button>
                <Button Margin="10" Height="40" FontSize="20">Instructor</Button>
                <Button  Margin="10" Height="40" FontSize="20">Student</Button>
                    
                
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
